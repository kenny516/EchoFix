<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - EchoFix</title>
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
</head>
<body class="min-h-screen bg-gray-100">
<header>
    <nav class="bg-white shadow-lg">
        <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <a class="flex items-center flex-shrink-0 text-xl font-bold text-gray-800" asp-controller="Home" asp-action="Index">
                        EchoFix
                    </a>
                    <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        <a asp-controller="Home" asp-action="Index" class="px-3 py-2 text-sm font-medium rounded-md hover:text-gray-700">
                            Accueil
                        </a>
                        <a asp-controller="Home" asp-action="Privacy" class="px-3 py-2 text-sm font-medium rounded-md hover:text-gray-700">
                            Privacy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<main class="py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
    @RenderBody()
</main>

<footer class="mt-8 bg-white shadow">
    <div class="px-4 py-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <p class="text-sm text-center text-gray-500">
            &copy; 2025 - EchoFix - <a asp-controller="Home" asp-action="Privacy" class="hover:text-gray-700">Privacy</a>
        </p>
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>